{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Symlink Manager",
  "version": "0.2.4",
  "identifier": "com.flyto.symlink-manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run generate:icons && npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Symlink Manager",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": ["dmg", "msi", "deb", "appimage", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEYxOTZFRUE3NDIzM0I5RjMKUldUenVUTkNwKzZXOGJ5RE5HWjVmZVlJZTZJWFRoMHZ2U09lVXpnRHVYNWFmTFUvQjBGWWY4ZEMK",
      "endpoints": [
        "https://github.com/flytoapp/symlink-manager/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
